<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title  | CarOrders Project</title>
    <meta name="description" content="Sufee Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="apple-icon.png">
    <link rel="shortcut icon" href='@Url.Content("~/favicon.ico")'>
    <link rel="stylesheet" href='@Url.Content("~/assets/css/normalize.css")'>
    <link rel="stylesheet" href='@Url.Content("~/assets/css/bootstrap.min.css")'>
    <link rel="stylesheet" href='@Url.Content("~/assets/css/font-awesome.min.css")'>
    <link rel="stylesheet" href='@Url.Content("~/assets/css/themify-icons.css")'>
    <link rel="stylesheet" href='@Url.Content("~/assets/css/flag-icon.min.css")'>
    <link rel="stylesheet" href='@Url.Content("~/assets/css/cs-skin-elastic.css")'>
    <!-- <link rel="stylesheet" href="assets/css/bootstrap-select.less"> -->
    <link rel="stylesheet" href='@Url.Content("~/assets/scss/style.css")'>
    <link href='@Url.Content("~/assets/css/lib/vector-map/jqvmap.min.css")' rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.2.620/styles/kendo.common-material.min.css" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.2.620/styles/kendo.material.min.css" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2018.2.620/styles/kendo.material.mobile.min.css" />

    <!---- <link href='@Url.Content("~/Content/themes/base/all.css")' rel="stylesheet" type="text/css" / > -->
    <link href='@Url.Content("~/Content/themes/base/jquery-ui.css")' rel="stylesheet" type="text/css" />

</head>
<body>
    <!-- Left Panel -->
    <aside id="left-panel" class="left-panel">
        <nav class="navbar navbar-expand-sm navbar-default">
            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="~/"><img src="~/images/logo.png" alt="Logo"></a>
                <a class="navbar-brand hidden" href="~/"><img src="~/images/logo2.png" alt="Logo"></a>
            </div>
            <div id="main-menu" class="main-menu collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a href="~/"> <i class="menu-icon fa fa-dashboard"></i>Главная</a>
                        <h3 class="menu-title">Панель управления</h3><!-- /.menu-title -->
                    <li class="menu-item-has-children dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-sign-in"></i>Авторизация</a>
                        <ul class="sub-menu children dropdown-menu">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <p class="text-white">Вы вошли как: @User.Identity.Name</p>
                                <li><i class="menu-icon fa fa-sign-out"></i><a href="~/Account/Logout">Выход</a></li>
                            }
                            else
                            {
                                <li><i class="menu-icon fa fa-sign-in"></i><a href="~/Account/Login">Войти</a></li>
                                <li><i class="menu-icon fa fa-sign-in"></i><a href="~/Account/Register">Регистрация</a></li>
                            }

                        </ul>
                    </li>
                    <li class="menu-item-has-children dropdown">

                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-th"></i>Формы заявок</a>
                        <ul class="sub-menu children dropdown-menu">
                            <li><i class="menu-icon fa fa-th"></i><a href='@Url.Content("~/Orders/")'>Добавление заявки</a></li>
                            <li><i class="menu-icon fa fa-th"></i><a href='@Url.Content("~/Determines/")'>Проверка заявки</a></li>
                        </ul>
                    </li>
                    <li class="menu-item-has-children dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-table"></i>Справочники</a>
                        <ul class="sub-menu children dropdown-menu">
                            <li><i class="fa fa-table"></i><a href='@Url.Content("~/Materials/")'>Материалы</a></li>
                            <li><i class="fa fa-table"></i><a href='@Url.Content("~/JobTypes/")'>Тип работ</a></li>
                            <li><i class="fa fa-table"></i><a href='@Url.Content("~/Routes/")'>Маршрут</a></li>
                            <li><i class="fa fa-table"></i><a href='@Url.Content("~/RouteTypes/")'>Тип маршрута</a></li>
                            <li><i class="fa fa-table"></i><a href='@Url.Content("~/Determines/")'>Определение тары</a></li>
                        </ul>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </nav>
    </aside><!-- /#left-panel -->
    <!-- Left Panel -->
    <!-- Right Panel -->
    <div id="right-panel" class="right-panel">
        <!-- Header-->
        <header id="header" class="header">
            <div class="header-menu">
                <div class="col-sm-7">
                    <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
                    <div class="header-left">
                        <button class="search-trigger"><i class="fa fa-search"></i></button>
                        <div class="form-inline">
                            <form class="search-form">
                                <input class="form-control mr-sm-2" type="text" placeholder="Search ..." aria-label="Search">
                                <button class="search-close" type="submit"><i class="fa fa-close"></i></button>
                            </form>
                        </div>


                    </div>
                </div>
            </div>
        </header><!-- /header -->
        <!-- Header-->

        <div class="breadcrumbs">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>@ViewBag.Title</h1>
                    </div>
                </div>
            </div>

        </div>


        <div class="content mt-3">
            @RenderBody()
        </div> <!-- .content -->
    </div><!-- /#right-panel -->
    <!-- Right Panel -->

    <hr />

    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>



    <script src='@Url.Content("~/assets/js/vendor/jquery-2.1.4.min.js")'></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"></script>
    <script src='@Url.Content("~/assets/js/plugins.js")'></script>
    <script src='@Url.Content("~/assets/js/main.js")'></script>

    <script src='@Url.Content("~/assets/js/lib/chart-js/Chart.bundle.js")'></script>
    <script src='@Url.Content("~/assets/js/dashboard.js")'></script>
    <script src='@Url.Content("~/assets/js/widgets.js")'></script>
    <script src='@Url.Content("~/assets/js/lib/vector-map/jquery.vmap.js")'></script>
    <script src='@Url.Content("~/assets/js/lib/vector-map/jquery.vmap.min.js")'></script>
    <script src='@Url.Content("~/assets/js/lib/vector-map/jquery.vmap.sampledata.js")'></script>
    <script src='@Url.Content("~/assets/js/lib/vector-map/country/jquery.vmap.world.js")'></script>

    <script src='@Url.Content("~/Scripts/jquery-3.3.1.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>

    <script src="https://kendo.cdn.telerik.com/2018.2.620/js/jquery.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2018.2.620/js/kendo.all.min.js"></script>

    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {

            $.ajaxSetup({ cache: false });

            $(".viewDialog").on("click", function (e) {
                e.preventDefault();

                $("<div></div>")
                    .addClass("dialog")
                    .appendTo("body")
                    .dialog({
                        title: $(this).attr("data-dialog-title"),
                        close: function () { $(this).remove() },

                        /* autoOpen: true,
                          resizable: false,
                          height: 200,
                         width: 400,
                          position: {
                              top: 300,
                              left: 300
                          },

                             */
                        modal: true
                    })
                    .load(this.href);
            });
        });
    </script>
</body>
</html>
